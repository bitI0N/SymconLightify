{
  "elements": [
    { "type": "RowLayout",
      "items": [
        { "type": "PopupButton", "caption": "Options",
          "popup": { "caption": "Options",
            "items": [
              { "type": "CheckBox", "name": "allDevices",   "caption": "Create 'All Devices' switch" },
              { "type": "List",     "name": "listCategory", "caption": "Category selection", "rowCount": 4,
                "columns": [
                  { "caption": "Type",   "name": "itemType",   "width": "80px" },
                  { "caption": "Target", "name": "Category",   "width": "auto" },
                  { "caption": "Target", "name": "categoryID", "width": "10px", "visible": false,
                    "edit": {
                      "type": "SelectCategory"
                    }
                  }
                ],
                "values": []
              }
            ]
          }
        }
      ]
    }
  ],
  "actions": [
    { "type": "Configurator", "name": "Configurator", "caption": "OSRAM Lightify Configurator", "delete": true, "rowCount": 10,
      "sort": {
        "column":    "itemID",
        "direction": "ascending"
      },
      "columns": [
        { "caption": "ID",           "name": "itemID",    "width":  "50px", "visible": false },
        { "caption": "Type",         "name": "itemType",  "width":  "80px" },
        { "caption": "Class",        "name": "itemClass", "width":  "80px" },
        { "caption": "ZLL",          "name": "zigBee",    "width":  "60px" },
        { "caption": "UUID",         "name": "UUID",      "width": "200px" },
        { "caption": "Name",         "name": "itemName",  "width": "150px" },
        { "caption": "Capabilities", "name": "itemLabel", "width": "250px" },
        { "caption": "Model",        "name": "itemModel", "width": "200px" },
        { "caption": "Firmware",     "name": "firmware",  "width": "auto"  }
      ],
      "values": []
    },
    { "type": "RowLayout",
      "items": [
        { "type": "PopupButton", "caption": "Add",
          "popup": { "caption": "Add variable",
            "items": [
              { "type": "SelectVariable", "name": "addVariable", "caption": "Add variable" }
            ]
          }
        },
        { "type": "PopupButton", "caption": "Remove",
          "popup": { "caption": "Remove Popup",
            "items": [
              { "type": "SelectVariable", "name": "removeVariable", "caption": "Remove variable" }
            ]
          }
        },
        { "type": "PopupButton", "caption": "Rename",
          "popup": { "caption": "Rename",
            "items": [
              { "type": "List", "name": "listElements", "caption": "Select element", "rowCount": 10,
                "columns": [
                  { "caption": "Name", "name": "itemName", "width": "auto" }
                ],
                "values": []
              }
            ]
          }
        },
        { "type": "PopupButton", "caption": "Groups",
          "popup": { "caption": "Groups configuration",
            "items": [
              { "type": "RowLayout",
                "items": [
                  { "type": "List", "name": "listGroups", "caption": "Group list", "rowCount": 10,
                    "columns": [
                      { "caption": "Group ID", "name": "ID",   "width": "0px", "visible": false },
                      { "caption": "UUID",     "name": "UUID", "width": "0px", "visible": false },
                      { "caption": "Name",     "name": "name", "width": "150px", "onClick": "OSR_SetGroupConfiguration($id, 'listGroups', $listGroups['UUID']);" }
                    ],
                    "values": []
                  },
                  { "type": "List", "name": "groupDevices", "caption": "Devices in group", "rowCount": 10,
                    "columns": [
                      { "caption": "UUID", "name": "UUID", "width": "0px", "visible": false },
                      { "caption": "Name", "name": "name", "width": "150px", "onClick": "OSR_SetGroupConfiguration($id, 'groupDevices', $groupDevices['UUID']);" }
                    ],
                    "values": []
                  },
                  { "type": "List", "name": "listDevices", "caption": "Device list", "rowCount": 10,
                    "columns": [
                      { "caption": "UUID", "name": "UUID", "width": "0px", "visible": false },
                      { "caption": "Name", "name": "name", "width": "150px", "onClick": "OSR_SetGroupConfiguration($id, 'listDevices', $listDevices['UUID']);" }
                    ],
                    "values": []
                  }
                ]
              },
              { "type": "RowLayout",
                "items": [
                  { "type": "Button", "name": "add", "visible": true, "enabled": false, "caption": "Add device", "onClick": "OSR_AddToGroup($id, $listGroups['ID'], $listDevices['UUID'], $listDevices['name'], $listGroups['name']);" },
                  { "type": "Button", "name": "remove", "visible": true, "enabled": false, "caption": "Remove device", "onClick": "OSR_RemoveFromGroup($id, $listGroups['ID'], $groupDevices['UUID'], $groupDevices['name']);" },
                  { "type": "ProgressBar", "name": "progress", "visible": false, "indeterminate": true, "caption": "Synch in progress, please wait ..." }
                ]
              }
            ]
          }
        }
      ]
    }
  ]

}