{
  "actions": [
    { "type": "Configurator", "name": "Lightify", "caption": "OSRAM Lightify Configurator", "delete": true, "rowCount": 10,
      "sort": {
        "column":    "ID",
        "direction": "ascending"
      },
      "columns": [
        { "caption": "[id]",         "name": "ID",       "width":  "60px" },
        { "caption": "Class",        "name": "class",    "width":  "95px" },
        { "caption": "ZLL",          "name": "zigBee",   "width":  "60px" },
        { "caption": "UUID",         "name": "UUID",     "width": "200px" },
        { "caption": "Name",         "name": "name",     "width": "150px" },
        { "caption": "Capabilities", "name": "label",    "width": "250px" },
        { "caption": "Model",        "name": "model",    "width": "200px" },
        { "caption": "Firmware",     "name": "firmware", "width": "auto"  }
      ],
      "values": []
    },
    { "type": "RowLayout", "name": "Buttons",
      "items": [
        { "type": "PopupButton", "name": "Locations", "caption": "Locations", "width": "150px",
          "popup": { "caption": "Locations",
            "items": [
              { "type": "List", "name": "listLocations", "caption": "Location selection", "rowCount": 4, "onEdit": "OSR_SetLocations($id, $listLocations);",
                "columns": [
                  { "caption": "Type",     "name": "class", "width": "80px" },
                  { "caption": "Location", "name": "name",  "width": "auto" },
                  { "caption": "ID",       "name": "ID",    "width": "50px", "visible": false,
                    "edit": {
                      "type": "SelectCategory"
                    }
                  }
                ],
                "values": []
              }
            ]
          }
        },
        { "type": "PopupButton", "name": "SetupGroup", "caption": "Group setup", "width": "150px", "onClick": "OSR_LoadListGroups($id);",
          "popup": { "caption": "Setup group",
            "items": [
              { "type": "RowLayout",
                "items": [
                  { "type": "ValidationTextBox", "name": "newGroup",  "width": "170px", "enabled": false, "value": "", "caption": "Rename group" },
                  { "type": "Button", "name": "renameGroup", "width": "115px", "enabled": false, "caption": "Rename", "onClick": "OSR_RenameListItem($id, $listGroups, 'Group', $newGroup);" },
                  { "type": "ValidationTextBox", "name": "newDevice", "width": "170px", "enabled": false, "value": "", "caption": "Rename device" },
                  { "type": "Button", "name": "renameDevice", "width": "115px", "enabled": false, "caption": "Rename", "onClick": "OSR_RenameListItem($id, $listDevices, 'Device', $newDevice);" }
                ]
              },
              { "type": "RowLayout",
                "items": [
                  { "type": "List", "name": "listGroups", "caption": "Group list", "rowCount": 10,
                    "columns": [
                      { "caption": "[id]",  "name": "ID",    "width": "35px" },
                      { "caption": "UUID",  "name": "UUID",  "width": "0px",   "visible": false },
                      { "caption": "Name",  "name": "name",  "width": "215px", "onClick": "OSR_LoadGroupConfiguration($id, $listGroups, 'initial');" }
                    ],
                    "values": []
                  },
                  { "type": "List", "name": "listDevices", "caption": "Device list", "rowCount": 10, "onEdit": "OSR_SetGroupConfiguration($id, $listDevices, $listGroups['ID'], $listGroups['name']);",
                    "columns": [
                      { "caption": "UUID", "name": "UUID",   "width": "0px", "visible": false },
                      { "caption": "Name", "name": "name",   "width": "202px", "onClick": "OSR_SetDeviceRename($id, $listDevices);" },
                      { "caption": "",     "name": "value",  "width": "25px", 
                        "edit": {
                          "type": "CheckBox"
                        }
                      }
                    ],
                    "values": []
                  }
                ]
              },
              { "type": "PopupAlert", "name": "popupConfirm", "visible": false,
                "popup": { "closeCaption": "Cancel",
                  "items": [
                    { "type": "RowLayout",
                      "items": [
                        { "type": "Label",  "name": "confirmText", "width": "450px", "caption": "" },
                        { "type": "Button", "name": "confirmYes",  "width": "115px", "enabled": true, "caption": "Yes", "onClick": "" }
                      ]
                    }
                  ]
                }
              },
              { "type": "RowLayout",
                "items": [
                  { "type": "ProgressBar", "name": "setupProgress", "width": "586px", "visible": false, "indeterminate": true, "caption": "Synchronisation in progress, please wait ..." },
                  { "type": "Label",  "name": "setupMessage", "width": "492px", "caption": "" },
                  { "type": "Button", "name": "setupRefresh", "width": "94px",  "enabled": true, "caption": "Refresh", "onClick": "OSR_LoadGroupConfiguration($id, $listGroups, 'refresh');" }
                ]
              }
            ]
          }
        },
        { "type": "PopupButton", "name": "CreateGroup", "caption": "Create group", "width": "150px", "onClick": "OSR_LoadListDevices($id, 'initial');",
          "popup": { "caption": "Create group",
            "items": [
              { "type": "RowLayout",
                "items": [
                  { "type": "ValidationTextBox", "name": "addGroup", "width": "492px", "enabled": true, "value": "", "caption": "Group name" },
                  { "type": "Button", "name": "createGroup", "width": "94px", "enabled": true, "caption": "Create", "onClick": "OSR_CreateGroup($id, $addDevices, $addGroup);" }
                ]
              },
              { "type": "List", "name": "addDevices", "caption": "Device list", "rowCount": 10,
                "columns": [
                  { "caption": "UUID", "name": "UUID",  "width": "0px", "visible": false },
                  { "caption": "Name", "name": "name",  "width": "190px" },
                  { "caption": "",     "name": "value", "width": "auto",
                    "edit": {
                      "type": "CheckBox"
                    }
                  }
                ],
                "values": []
              },
              { "type": "RowLayout",
                "items": [
                  { "type": "ProgressBar", "name": "createProgress", "width": "586px", "visible": false, "indeterminate": true, "caption": "Synchronisation in progress, please wait ..." },
                  { "type": "Label",  "name": "createMessage", "width": "492px", "caption": "" },
                  { "type": "Button", "name": "createRefresh", "width": "94px",  "enabled": true, "caption": "Refresh", "onClick": "OSR_LoadListDevices($id, 'refresh');" }
                ]
              }
            ]
          }
        },
        { "type": "Image", "image": "data:image/png;base64," }
      ]
    }
  ]

}