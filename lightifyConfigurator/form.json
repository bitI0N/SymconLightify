{
  "actions": [
    { "type": "Configurator", "name": "Lightify", "caption": "OSRAM Lightify Configurator", "delete": true, "rowCount": 10,
      "sort": {
        "column":    "itemID",
        "direction": "ascending"
      },
      "columns": [
        { "caption": "ID",           "name": "itemID",    "width":  "50px", "visible": false },
        { "caption": "Type",         "name": "itemType",  "width":  "80px" },
        { "caption": "Class",        "name": "itemClass", "width":  "80px" },
        { "caption": "ZLL",          "name": "zigBee",    "width":  "60px" },
        { "caption": "UUID",         "name": "UUID",      "width": "200px" },
        { "caption": "Name",         "name": "itemName",  "width": "150px" },
        { "caption": "Capabilities", "name": "itemLabel", "width": "250px" },
        { "caption": "Model",        "name": "itemModel", "width": "200px" },
        { "caption": "Firmware",     "name": "firmware",  "width": "auto"  }
      ],
      "values": []
    },
    { "type": "RowLayout", "name": "Buttons",
      "items": [
        { "type": "PopupButton", "name": "Locations", "caption": "Locations", "width": "115px",
          "popup": { "caption": "Locations",
            "items": [
              { "type": "List", "name": "listLocations", "caption": "Category selection", "rowCount": 4, "onEdit": "OSR_SetLocations($id, $listLocations);",
                "columns": [
                  { "caption": "Type",     "name": "class", "width": "80px" },
                  { "caption": "Location", "name": "name",  "width": "auto" },
                  { "caption": "ID",       "name": "ID",    "width": "50px", "visible": false,
                    "edit": {
                      "type": "SelectCategory"
                    }
                  }
                ],
                "values": []
              }
            ]
          }
        },
        { "type": "PopupButton", "name": "setupGroup", "caption": "Setup group", "width": "115px", "onClick": "OSR_GetListGroups($id);",
          "popup": { "caption": "Setup group",
            "items": [
              { "type": "RowLayout",
                "items": [
                  { "type": "ValidationTextBox", "name": "newName", "enabled": false, "value": "", "caption": "Name" },
                  { "type": "Button", "name": "rename", "enabled": false, "caption": "Rename group", "onClick": "OSR_RenameGroup($id, $listGroups, $newName);" }
                ]
              },
              { "type": "RowLayout",
                "items": [
                  { "type": "List", "name": "listGroups", "caption": "Group list", "rowCount": 10,
                    "columns": [
                      { "caption": "ID",    "name": "ID",    "width": "0px", "visible": false },
                      { "caption": "UUID",  "name": "UUID",  "width": "0px", "visible": false },
                      { "caption": "Name",  "name": "name",  "width": "230px", "onClick": "OSR_GetGroupConfiguration($id, $listGroups);" }
                    ],
                    "values": []
                  },
                  { "type": "List", "name": "listDevices", "caption": "Device list", "rowCount": 10, "onEdit": "OSR_SetGroupConfiguration($id, $listDevices, $listGroups['ID'], $listGroups['name']);",
                    "columns": [
                      { "caption": "UUID", "name": "UUID",  "width": "0px", "visible": false },
                      { "caption": "Name", "name": "name",  "width": "190px" },
                      { "caption": "",     "name": "value", "width": "40px",
                        "edit": {
                          "type": "CheckBox"
                        }
                      }
                    ],
                    "values": []
                  }
                ]
              },
              { "type": "Label",       "name": "message",  "visible": false, "caption": "" },
              { "type": "ProgressBar", "name": "progress", "visible": false, "indeterminate": true, "caption": "Synchronisation in progress, please wait ..." }
            ]
          }
        },
        { "type": "PopupButton", "name": "createGroup", "caption": "Create group", "width": "115px", "onClick": "OSR_GetListDevices($id);",
          "popup": { "caption": "Create group",
            "items": [
              { "type": "RowLayout",
                "items": [
                  { "type": "ValidationTextBox", "name": "addName", "enabled": true, "value": "", "caption": "Name" },
                  { "type": "Button", "name": "create", "enabled": true, "caption": "Create group", "onClick": "OSR_CreateGroup($id, $addDevices, $addName);" }
                ]
              },
              { "type": "List", "name": "addDevices", "caption": "Device list", "rowCount": 10,
                "columns": [
                  { "caption": "UUID", "name": "UUID",  "width": "0px", "visible": false },
                  { "caption": "Name", "name": "name",  "width": "190px" },
                  { "caption": "",     "name": "value", "width": "auto",
                    "edit": {
                      "type": "CheckBox"
                    }
                  }
                ],
                "values": []
              }
            ]
          }
        },
        { "type": "Image", "image": "data:image/png;base64," }
      ]
    }
  ]

}