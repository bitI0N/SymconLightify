  "actions": [
    { "type": "Button", "label": "Sync devices", "onClick": "OSR_SyncDevices($id); echo 'Devices successfully synced!\n';" }
  ],
  "status": [
    { "code": 101, "icon": "active", "caption": "Creating gateway interface" },
    { "code": 102, "icon": "active", "caption": "Gateway is active" },
    { "code": 103, "icon": "active", "caption": "Deleting gateway interface" },
    { "code": 104, "icon": "inactive", "caption": "Please enter all required informations!" },
    { "code": 202, "icon": "error", "caption": "Invalid IP address!" },
    { "code": 203, "icon": "error", "caption": "Minimum update interval 10 seconds!" },
    { "code": 299, "icon": "error", "caption": "Unknown error!" }
