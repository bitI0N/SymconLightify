{
  "elements": [
	  { "type": "CheckBox", "name": "Open", "caption": " Open" },
    { "name": "Host", "type": "ValidationTextBox", "caption": "Host" },
    { "type": "Select", "name": "Port", "caption": "Port",
	    "options": [
        { "label": "4000", "value": 4000 }
      ]
    },
    { "name": "updateInterval", "type": "IntervalBox", "caption": "seconds" },
    { "type": "List", "name": "Categories", "caption": "Categories", 
			"columns": [
				{ "label": "Device type", "name": "Device", "width": "75px" },
        { "label": "Device category", "name": "Category", "width": "auto" },
        { "label": "Category ID", "name": "CategoryID", "width": "60px", "visible": false,
        	"edit": {
          	"type": "SelectCategory"
        	}
        },
        { "label": "Sync", "name": "Sync", "width": "40px" },
				{ "label": "Sync ID", "name": "SyncID", "width": "40px", "visible": false,
					"edit": {
          	"type": "CheckBox", "caption": " Synchronise data"
        	}
        }
			]
		},
    { "type": "Label", "label": "Gateway firmware version will be filled in automatically on save. Update will only be visible when reopening form." },
    { "type": "ValidationTextBox", "name": "Firmware", "caption": "Firmware" }
